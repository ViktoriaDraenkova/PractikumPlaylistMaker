<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BigButtonsSlyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:backgroundTint">?attr/backgroundColor</item>
        <item name="android:paddingTop">19dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">19sp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">12dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

    </style>

    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@drawable/control</item>
    </style>

    <style name="StyleForBack">
        <item name="iconGravity">end</item>
        <item name="iconPadding">12dp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="StyleForImageInActivityWithAnyProblems">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TexInActivityWithAnyProblems">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/day_black_night_white</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">19sp</item>
    </style>
    <style name="ButtonUpdate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">@color/day_black_night_white</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/day_white_night_black</item>
        <item name="android:textSize">14sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>
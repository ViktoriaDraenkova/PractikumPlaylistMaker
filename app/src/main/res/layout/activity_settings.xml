<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="0dp"
    android:paddingBottom="28dp"
    android:textAllCaps="false"
    tools:context=".ui.settings.activity.SettingsActivity"
    android:background="@color/day_white_night_black">

    <Toolbar
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:contentInsetStartWithNavigation="0dp"
        android:navigationIcon="@drawable/strelka"
        android:title="@string/settings"
        android:titleTextAppearance="@style/ToolbarTitleText"
        app:theme="@style/ToolbarColoredBackArrow" />



    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        style="@style/MySwitchStyle"
        android:text="@string/dark" />


    <Button
        android:id="@+id/button_share"
        style="@style/SettingsButtonsStyle"
        android:text="@string/share"
        app:icon="@drawable/share" />

    <Button
        android:id="@+id/button_to_support"
        style="@style/SettingsButtonsStyle"
        android:text="@string/tosupp"
        app:icon="@drawable/group" />

    <Button
        android:id="@+id/button_user_agreement"
        style="@style/SettingsButtonsStyle"
        android:text="@string/agr"
        app:icon="@drawable/big_lupa" />


</LinearLayout>
